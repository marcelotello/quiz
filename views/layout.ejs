   <script>
$(document).ready(function() {
   $('.list-group a').mouseover(function(e) {
   
   $('.list-group a').removeClass('list-group-item active');
   $('.list-group a').addClass('list-group-item');
   var $this = $(this);
   
    if (!$this.hasClass('list-group-item active')) {
    
      $this.addClass('list-group-item active');
	  
	  
    }
    e.preventDefault();
   });
});
   </script>
    
